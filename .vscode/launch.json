  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno Fresh",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dev.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/opt/homebrew/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
